{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "blocks": [
        {
            "alignment": "left",
            "segments": [
                {
                    "type": "os",
                    "style": "powerline",
                    "foreground": "cyan",
                    "template": "{{ .Icon }}"
                },
                {
                    "foreground": "cyan",
                    "properties": {
                        "style": "full"
                    },
                    "style": "plain",
                    "template": " {{ .Path }}",
                    "type": "path"
                },
                
                {
                    "type": "git",
                    "style": "plain",
                    "foreground": "lightYellow",
                    "template": " {{ .HEAD }}"
                },
                {
                    "type": "python",
                    "style": "plain",
                    "properties": {
                        "display_mode": "context"
                    },
                    "foreground": "#100e23",
                    "template": "{{ if .Error }}{{ .Error }}{{ else }} \ue73c{{ if .Venv }} {{ .Venv }}{{ end }} {{ .Full }}{{ end }}"
                },
                {
                    "type": "go",
                    "style": "plain",
                    "properties": {
                        "display_mode": "context"
                    },
                    "foreground": "#7FD5EA",
                    "template": "{{ if .Error }}{{ .Error }}{{ else }} \ue627 {{ .Full }}{{ end }}"
                }
            ],
            "type": "prompt"
        },
        {
            "alignment": "left",
            "newline": true,
            "segments": [
                {
                    "foreground": "lightGreen",
                    "foreground_templates": [
                        "{{ if gt .Code 0 }}red{{ end }}"
                    ],
                    "properties": {
                        "always_enabled": true
                    },
                    "style": "powerline",
                    "template": "\u279c ",
                    "type": "status"
                }
            ],
            "type": "prompt"
        }
    ],
    "version": 2
}
